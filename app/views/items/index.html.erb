<p id="notice"><%= notice %></p>

<h1>Rubibase</h1>

<h1>Search Items</h1>

<p>
  Press <%= link_to 'here', search_items_path %> to search for items.
</p>

<h1>Add an Item</h1>
<p>
Press here to add a new item to the database: <%= link_to 'New Item', new_item_path %>
</p>

<% unless @items.blank? %>
<%= will_paginate %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
		<td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>
<% else %>
<p> There is no data in the database yet </p>
<% end %>

<br>

<%= link_to 'New Item', new_item_path %>
