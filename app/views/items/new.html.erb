<h1>New Item</h1>

<div class="row">
	<div class="col-md-4">
		<%= form_for(@item) do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
		
		<%= f.label :location %>
		<%= f.text_field :location, class: 'form-control' %>
		
		<%= f.submit "Create item", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
